from random import randint
print('ghost game')
feeling_brave = True
score = 0
while feeling_brave:
    ghost_door = randint(1,3)
    print('three doors ahead')
    print('A GHOST is behind one of them')
    print('choose wisely DUN DUN DUNNNN')
    door = input("enter a number between 1 and 3")
    door_num = int(door)
    if door_num == ghost_door:
        print('A GHOSt!!! AHHHAHAHAH')
        feeling_brave = False
    else:
        print('no ghost here, YIPPIE!!')
        print('its time to enter the next door..')
        score = score + 1
print('Run AWAY')
print('you scored', score , 'points')
